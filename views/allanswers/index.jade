extends ../../layouts/admin

block head
  title All Answers

block neck
  link(rel='stylesheet', href='/views/allanswers/index.min.css?#{cacheBreaker}')

block body
  .container
    div.page-header
      h1 All Answers
  ul.list-group
    each answer, i in data
      li.list-group-item
        Strong Posted to #{answer.module_code} - #{answer._year_sem} for Question #{answer.question_number} on
          em #{answer.date}
        hr
        p #{answer.details}
        if answer.mainimage && answer.mainimage != 'noimage'
          img(src='/images/#{answer.mainimage}')
        hr
        .row
          .col-md-10
            Strong Submitted by #{answer.author}
          .col-md-1
            a(href='/allanswers/edit/#{answer._id}', class='pull-right btn btn-primary') Edit
          .col-md-1
            a(data-delete=['#{answer._id}','#{answer.mainimage}'], class='btn btn-danger pull-right deleteAnswer_all', href="#") Delete
